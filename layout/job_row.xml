<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/white">


        <TextView
            android:id="@+id/TV_jobtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/jobtitle"
            android:textColor="@color/bluehead"
            android:textStyle="bold"
            android:text="Android Developer"
            android:paddingBottom="4dp"
            android:paddingTop="3dp"/>

        <TextView
            android:id="@+id/TV_companyname"
            android:layout_below="@+id/TV_jobtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label"
            android:textStyle="bold"
            android:text="Tata Consultancy Services"
            android:drawableLeft="@drawable/ic_vcompany"
            android:drawablePadding="2dp"
            android:textColor="@color/black"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"/>


        <TextView
            android:id="@+id/TV_location"
            android:layout_below="@+id/TV_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/label"
            android:textStyle="bold"
            android:text="Kolkata,India"
            android:textColor="#616161"
            android:drawableLeft="@drawable/ic_vloc"
            android:drawablePadding="2dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"/>


        <TextView
            android:id="@+id/TV_applybtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/TV_companyname"
            android:layout_alignParentRight="true"
            android:background="@color/ok_button"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:text="Apply"
            android:elevation="10dp"
            android:textSize="@dimen/label"
            android:textColor="@color/white"/>





    </RelativeLayout>

</android.support.v7.widget.CardView>